!!!
%html
  %head
    %title
      Simple CMS#{' - ' + yield(:title) if content_for?(:title)}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = yield(:script)
  %body
    %header{:style => "height: 1em; padding: 1em; margin-bottom: 1em; background: #0099CC;"}
      Simple CMS
      - if session[:user_id].present?
        %span{:style => "float: right;"}
          User: #{@username} (#{link_to('logout', logout_path, method: :delete)})
    #content{:style => "min-height: 400px;"}
      = render(partial: 'application/flash')
      = yield
    %footer{:style => "height: 1em; padding: 1em; margin-top: 1em; background: #0099CC;"}
      Copyright #{Time.now.year}