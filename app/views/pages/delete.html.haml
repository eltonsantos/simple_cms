- content_for(:title) { "Delete Page: #{@page.name}" }

= link_to("<< Back to List", pages_path, :class => 'back-link')
.pages.delete
  %h2 Delete Page
  = form_for(@page, :method => 'delete') do |f|
    %p Are you sure you want to permanently delete this page?
    %p= @page.name
    .form-buttons
      = f.submit("Delete Page")