- content_for(:title) { "Edit Subject: #{@subject.name}" }

= link_to("<< Back to List", subjects_path, :class => 'back-link')
.subjects.edit
  %h2 Update Subject
  = form_for(@subject) do |f|
    = render(:partial => 'form', :locals => {:f => f})
    .form-buttons
      = f.submit("Update Subject")