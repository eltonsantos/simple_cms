- content_for(:title) { "Delete User: #{@user.full_name}" }

= link_to("<< Back to List", users_path, :class => 'back-link')

.users.delete
  %h2 Delete User
  = form_for(@user, :method => 'delete') do |f|
    %p Are you sure you want to permanently delete this user?
    %p= @user.full_name
    .form-buttons
      = f.submit("Delete User")